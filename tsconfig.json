{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "rip/AllProducts.tsx",
    "rip/uploadForm.tsx",
    "rip/ProductDetails.tsx",
    "rip/useModal.tsx",
    "rip/AllCategories.tsx",
    "rip/hooks",
    "rip/components",
    "rip/use.categories.store.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
